<% include common/header.ejs %>

<div class="left orderBox">
	<div class="row">
		<p class="title">1. Контактні дані</p>
		<div class="col-md-7">
			<form class="form-horizontal">
				<div class="form-group" id="nameFields">
					<label class="col-sm-2 control-label">Ім'я</label>
					<div class="col-sm-10">
						<input id="nameInput" class="form-control" type="text" placeholder="Ім'я" />
						<span class="nameError error">Введіть тільки власне ім’я, без цифр</span>
					</div>
				</div>
				
				<div id="phoneFields" class="form-group">
					<label class="col-sm-2 control-label">Телефон</label>
					<div class="col-sm-10">
						<input id="phoneInput" class="form-control" type="text" placeholder="+380935941480" />
						<span class="phoneError error">Введіть номер телефону у форматі +380 або почніть з 0</span>
					</div>
				</div>
				
				<div id="addressFields" class="form-group">
					<label class="col-sm-2 control-label">Адреса</label>
					<div class="col-sm-10">
						<input id="addressInput"  class="form-control"type="text" placeholder="Київ, вул Спаська, 2" />
					</div>
				</div>
			</form>
		</div>
		<div class="col-md-5">
			<div class="info">
				<h4>Інформація про замовлення</h4>
				<p><span class="bold">Приблизний час доставки:</span> <span id="timeDeliver">невідомий</span></p>
				<p><span class="bold">Адреса доставки:</span> <span id="addressDeliver">невідома</span></p>
			</div>
		</div>
	</div>
	
	<button class="postButton btn btn-warning btn-md" type="button">Далі</button>
	
	<span id="googleMap"></span>
	
	<div id="liqpay_checkout"></div>

</div>

<div class="order-panel">
	
	<div class="top">
		<span class="title">Замовлення</span><span class="badge" id="amountAllPizza">0</span>
	</div>
	
	<div class="orders">	
		
	</div>
	
	<div class="bottom">
		<p id="orderPriceBox">
			<span class="orderTitle">Сума замовлення</span>
			<span class="orderSum"><span id="totalSumOfOrder"></span> грн</span>
		</p>
		<a href="http://localhost:5050" id="changeOrder" class="change btn btn-default btn-lg ">Редагувати замовлення</a>
	</div>
	
</div>

<% include common/footer.ejs %>